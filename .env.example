# ===========================================
# LLM Provider Configuration
# ===========================================
# Choose your LLM provider: anthropic, openai, google, or zhipu
LLM_PROVIDER=anthropic

# Only fill in the API key for your chosen provider

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your_key_here

# OpenAI (GPT-4, GPT-3.5, etc.)
# OPENAI_API_KEY=sk-your_key_here

# Google (Gemini)
# GOOGLE_API_KEY=your_key_here

# Zhipu AI (GLM)
# ZHIPU_API_KEY=your_key_here

# ===========================================
# LLM Model Configuration
# ===========================================
# Model name (provider-specific):

# For Anthropic:
#   - claude-sonnet-4-5-20250929 (recommended, best quality)
#   - claude-sonnet-4-20250514
#   - claude-opus-4-20250514 (highest quality, slower)
#   - claude-haiku-4-20250305 (fastest, cheapest)
LLM_MODEL=claude-sonnet-4-5-20250929

# For OpenAI:
#   - gpt-4o (recommended)
#   - gpt-4o-mini (faster, cheaper)
#   - gpt-4-turbo
#   - gpt-3.5-turbo (cheapest)
# LLM_MODEL=gpt-4o

# For Google:
#   - gemini-2.0-flash-exp (recommended, fastest)
#   - gemini-1.5-pro (highest quality)
#   - gemini-1.5-flash (fast, cheap)
# LLM_MODEL=gemini-2.0-flash-exp

# For Zhipu AI:
#   - glm-4-plus (recommended, best quality)
#   - glm-4-0520 (high quality)
#   - glm-4-air (faster, cheaper)
#   - glm-4-airx (fastest, cheapest)
#   - glm-4-flash (ultra fast)
# LLM_MODEL=glm-4-plus

LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4096

# ===========================================
# Telegram Bot Configuration
# ===========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===========================================
# Reddit API (Optional)
# ===========================================
# Leave empty to skip Reddit fetching
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=AINewsBrief/1.0.0

# ===========================================
# GitHub API (Optional)
# ===========================================
# For higher rate limits on GitHub API (recommended for production)
# Create a token at: https://github.com/settings/tokens
GITHUB_TOKEN=

# ===========================================
# YouTube API (Optional)
# ===========================================
# For fetching AI video content from YouTube
# Create API key at: https://console.cloud.google.com/apis/credentials
# Enable YouTube Data API v3 for your project
YOUTUBE_API_KEY=

# ===========================================
# Article Processing Configuration
# ===========================================
MAX_TOTAL_ARTICLES=50
MIN_IMPORTANCE_SCORE=5
MAX_ARTICLES_PER_SOURCE=20
ARTICLE_AGE_HOURS=24

# ===========================================
# Data Source Toggles
# ===========================================
ENABLE_RSS=true
ENABLE_REDDIT=true
ENABLE_HACKERNEWS=true
ENABLE_ARXIV=true
ENABLE_BLOGS=true
ENABLE_GITHUB=true
ENABLE_X=true           # X (Twitter) posts from AI thought leaders
ENABLE_YOUTUBE=true     # YouTube videos from AI channels (requires API key)

# ===========================================
# Logging Configuration
# ===========================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log format: console (colored output) or json (structured)
LOG_FORMAT=console

# ===========================================
# Deduplication Settings
# ===========================================
# Path to store seen articles history
DEDUP_HISTORY_PATH=reports/seen_articles.json

# How many days to remember seen articles
DEDUP_HISTORY_DAYS=30

# ===========================================
# Other Settings
# ===========================================
TIMEZONE=Asia/Shanghai
